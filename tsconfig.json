{
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig to read more about this file */

    /* Language and Environment */
    "target": "es2019",                             
    /* Modules */
    "module": "commonjs",                                
    "outDir": "./dist",                                   
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            

    /* Type Checking */
    "strict": true,                                     

    /* Completeness */
    "skipLibCheck": true                                
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
